<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/cakeNameinOrderSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Drink Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantityinOrderSummary"
        android:layout_width="33dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hasChips"
        android:layout_width="164dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:text="has Chips: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/hasDes"
        android:layout_width="153dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="has desiccated: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/priceinOrderSummary"
        android:layout_width="100dp"
        android:layout_height="33dp"


        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="LKR 200"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/sumName"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasChips"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/sumaddress"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sumName"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Address: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/sumPhone"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sumName"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone No: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Sumdate"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sumaddress"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="date"
        android:text="Date"
        android:textSize="18sp" />


</RelativeLayout>
